<!--pages/mine/userinfo.wxml-->
<navbar page-name="LEXY" title-color="#ff0000" title-size="40rpx" show-back="false"></navbar>
<view class="page_head">
  个人信息
</view>
<view class="form_wrap">
  <form class="form_main" bindsubmit="formSubmit">
   <view class="form_body">
    <label>姓名：</label>
    <input name="username" placeholder="姓名"></input>
   </view>
   <view class="form_body">
    <label>身份证：</label>
    <input name="idcard" placeholder="身份证"></input>
   </view>
   <view class="form_body">
    <label>手机号码：</label>
    <input name="phonenumber" placeholder="手机号码"></input>
   </view>
   <view class="form_body">
    <label>验证码：</label>
    <input name="verifycode" placeholder="验证码"></input>
    <button type="primary" class="need_flex" bindtap="sendSms"><text>{{sms_text}}</text></button>
   </view>
   <view class="form_body">
    <button class="submit_form_button" form-type="submit"><text>提交</text></button>
   </view>
  </form>
</view>
